<h1 class="text-center">JShop</h1>

<section class="container">
  <% @articles.each_slice(3) do |articles|%>
    <section class="row">
      <% articles.each do |article| %>
        <article class="col-4">
        <div class="card border border-white" style="width: 18rem;">
          <img class="card-img-top" src="<%= article.image %>" alt="Card image cap" width=200 height=280>
          <div class="card-body">
            <h5 class="card-title"><%= article.title %></h5>
             <p class="card-text"><%= article.description%></p>
            <a href="#" class="btn btn-primary">Ver Art√≠culo</a>
          </div>
        </div>   
        </article>
     <% end %>
    </section>
  <% end %>
</section>  
